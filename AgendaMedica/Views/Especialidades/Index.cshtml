@model IEnumerable<AgendaMedica.Models.Especialidade>

@{
	ViewData["Title"] = "Cadastro de Especialidades";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5">Cadastro de <span class="fw-bold">Especialidades</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25">
			<i class="bi bi-plus-circle"></i> Adicionar
		</a>
	</p>

	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th class="bg-black">@Html.DisplayNameFor(model => model.Nome)</th>
				<th class="bg-black"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Nome)</td>
					<td>
						<div class="d-flex gap-2 justify-content-start">
							<a class="btn btn-outline-light btn-sm" asp-action="Edit" asp-route-id="@item.Id">
								<i class="bi bi-pencil-square"></i> Editar
							</a>
							<a class="btn btn-outline-light btn-sm" asp-action="Delete" asp-route-id="@item.Id">
								<i class="bi bi-x-square"></i> Excluir
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
