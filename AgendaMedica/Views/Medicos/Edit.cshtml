@model AgendaMedica.Models.Medico

@{
	ViewData["Title"] = "Editar Médico";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5">Editar <span class="fw-bold">Médico</span></h1>

	<form asp-action="Edit">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="MedicoId" class="form-control" />

		<div class="row gap-3 mb-3">
			<div class="col-12">
				<div class="form-group">
					<label asp-for="Nome" class="control-label"></label>
					<input asp-for="Nome" class="form-control" />
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="row gap-3 mb-3">
			<div class="col-12 col-md">
				<div class="form-group">
					<label asp-for="CRM" class="control-label"></label>
					<input asp-for="CRM" class="form-control" />
					<span asp-validation-for="CRM" class="text-danger"></span>
				</div>
			</div>

			<div class="col-12 col-md">
				<div class="form-group">
					<label asp-for="Celular" class="control-label"></label>
					<input asp-for="Celular" class="form-control" />
					<span asp-validation-for="Celular" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="row gap-3 mb-3">
			<div class="col-12 col-md">
				<div class="form-group">
					<label asp-for="EspecialidadeId" class="control-label"></label>
					<select asp-for="EspecialidadeId" class="form-control" asp-items="ViewBag.EspecialidadeId"></select>
					<span asp-validation-for="EspecialidadeId" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="row gap-3 mt-3 mb-3">
			<div class="col-12 d-flex justify-content-between">
				<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
				<input type="submit" value="Salvar Alterações" class="btn btn-primary" />
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
