@model AgendaMedica.Models.Medico

@{
	ViewData["Title"] = "Excluir Médico";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5">Excluir <span class="fw-bold">Médico</span></h1>

	<h3 class="text-center">Tem certeza que deseja excluir este registro?</h3>

	<div>
		<h4>Médico</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Nome)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Nome)
			</dd>

			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.CRM)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CRM)
			</dd>

			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Celular)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Celular)
			</dd>

			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Especialidade)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Especialidade.Nome)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="MedicoId" />
			<div class="d-flex gap-2">
				<input type="submit" value="Excluir" class="btn btn-danger" />
				<a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
			</div>
		</form>
	</div>
</div>
