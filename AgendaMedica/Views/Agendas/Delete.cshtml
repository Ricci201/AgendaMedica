@model AgendaMedica.Models.Agenda

@{
	ViewData["Title"] = "Excluir Agenda";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5">Excluir <span class="fw-bold">Agenda</span></h1>

	<div class="text-center mb-4">
		<h4>Tem certeza que deseja excluir esta agenda?</h4>
	</div>

	<div class="row justify-content-center">
		<div class="col-md-6">
			<dl class="row">
				<dt class="col-sm-4">Paciente</dt>
				<dd class="col-sm-8">@Html.DisplayFor(model => model.Paciente.Nome)</dd>

				<dt class="col-sm-4">Médico</dt>
				<dd class="col-sm-8">@Html.DisplayFor(model => model.Medico.Nome)</dd>

				<dt class="col-sm-4">Data da Consulta</dt>
				<dd class="col-sm-8">@Html.DisplayFor(model => model.DataConsulta)</dd>

				<dt class="col-sm-4">Status</dt>
				<dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
			</dl>

			<form asp-action="Delete">
				<input type="hidden" asp-for="AgendaId" />
				<div class="d-flex justify-content-between mt-4">
					<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
					<input type="submit" value="Excluir" class="btn btn-danger" />
				</div>
			</form>
		</div>
	</div>
</div>
