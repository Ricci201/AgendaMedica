@model AgendaMedica.Models.Paciente

@{
	ViewData["Title"] = "Excluir Paciente";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5">Excluir <span class="fw-bold">Paciente</span></h1>

	<h3 class="text-center">Tem certeza que deseja excluir este registro?</h3>

	<div>
		<h4>Paciente</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.CPF)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.CPF)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Celular)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Celular)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Telefone)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Telefone)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.DataNascimento)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Endereco)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Endereco)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Bairro)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Bairro)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cidade)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Cidade)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.UF)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.UF)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.CEP)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.CEP)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Prontuario)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Prontuario)</dd>

			<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
			<dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="PacienteId" />
			<div class="d-flex gap-2">
				<input type="submit" value="Excluir" class="btn btn-danger" />
				<a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
			</div>
		</form>
	</div>
</div>
